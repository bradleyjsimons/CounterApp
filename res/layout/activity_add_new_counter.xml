<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddNewCounterActivity" >

    <TextView
        android:id="@+id/counterNameActivityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:gravity="center_horizontal|center"
        android:hint="@string/counter_name_activity_title"
        android:textAlignment="center"
        android:textSize="35sp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/createCounterButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/createCounterButton"
        android:layout_marginBottom="34dp"
        android:text="@string/cancel_text" />

    <Button
        android:id="@+id/createCounterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_alignLeft="@+id/counterNameActivityTitle"
        android:layout_alignRight="@+id/counterNameActivityTitle"
        android:layout_marginBottom="20dp"
        android:text="@string/create_counter" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/createCounterButton"
        android:layout_alignRight="@+id/createCounterButton"
        android:layout_centerVertical="true"
        android:ems="10"
        android:gravity="center_vertical|center"
        android:hint="@string/counter_name_text"
        android:textAlignment="center" >

        <requestFocus />
    </EditText>

</RelativeLayout>
